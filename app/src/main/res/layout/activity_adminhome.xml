<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context="auribises.com.visitorbook.Activites.AdminhomeActivity">


    <Button
        android:id="@+id/buttonRegisteradminprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Admin_Profile"
        android:textSize="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:onClick="onClickHandler"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="377dp" />

    <Button
        android:id="@+id/buttonUpdateadminprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Admin_Profile"
        android:textSize="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:onClick="onClickHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="258dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/buttonAdminappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Appointment"
        android:textSize="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:onClick="onClickHandler"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="135dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />



</android.support.constraint.ConstraintLayout>
